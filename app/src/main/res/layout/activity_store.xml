<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivity">

    <TextView
        android:id="@+id/point100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="100 포인트"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buy100point"
        app:layout_constraintEnd_toStartOf="@+id/buy100point"
        app:layout_constraintTop_toTopOf="@+id/buy100point" />

    <TextView
        android:id="@+id/point300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="300 포인트"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buy300point"
        app:layout_constraintEnd_toStartOf="@+id/buy300point"
        app:layout_constraintTop_toTopOf="@+id/buy300point" />

    <TextView
        android:id="@+id/point500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="500 포인트"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buy500point"
        app:layout_constraintEnd_toStartOf="@+id/buy500point"
        app:layout_constraintTop_toTopOf="@+id/buy500point" />

    <TextView
        android:id="@+id/point1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="1000 포인트"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buy1000point"
        app:layout_constraintEnd_toStartOf="@+id/buy1000point"
        app:layout_constraintTop_toTopOf="@+id/buy1000point" />

    <TextView
        android:id="@+id/point1200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="1200 포인트"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buy1200point"
        app:layout_constraintEnd_toStartOf="@+id/buy1200point"
        app:layout_constraintTop_toTopOf="@+id/buy1200point" />

    <TextView
        android:id="@+id/point30000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="30000 포인트"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buy30000point"
        app:layout_constraintEnd_toStartOf="@+id/buy30000point"
        app:layout_constraintTop_toTopOf="@+id/buy30000point" />

    <Button
        android:id="@+id/buy100point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="1,100\"
        app:layout_constraintBottom_toTopOf="@+id/buy300point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buy300point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="3,000\"
        app:layout_constraintBottom_toTopOf="@+id/buy500point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy100point" />

    <Button
        android:id="@+id/buy500point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="4,500\"
        app:layout_constraintBottom_toTopOf="@+id/buy1000point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy300point" />

    <Button
        android:id="@+id/buy1000point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="8,500\"
        app:layout_constraintBottom_toTopOf="@+id/buy1200point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy500point" />

    <Button
        android:id="@+id/buy1200point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="10,000\"
        app:layout_constraintBottom_toTopOf="@+id/buy30000point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy1000point" />

    <Button
        android:id="@+id/buy30000point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="32,000\"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy1200point" />
</androidx.constraintlayout.widget.ConstraintLayout>